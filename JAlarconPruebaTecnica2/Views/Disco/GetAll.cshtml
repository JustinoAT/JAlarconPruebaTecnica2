@model ML.Disco
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

}

<h2 class="h4">Discos.</h2>

@using (Html.BeginForm("GetAll", "Disco", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <td><a class="btn btn-outline-dark" href="@Url.Action("Form", "Disco")"><i> Agregar disco</i></a></td>
    <br>
    <div class="table-responsive">
        <div class="container">
            <table class="table table-striped table-bordered" id="myTable">
                <thead>
                    <tr>
                        <th>Actualizar</th>
                        <th>IdDisco</th>
                        <th>Titulo</th>
                        <th>Artista</th>
                        <th>GeneroMusical</th>
                        <th>Duracion</th>
                        <th>Año</th>
                        <th>Distribuidora</th>
                        <th>Ventas</th>
                        <th>Disponibilidad</th>
                        <th>Borrar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Disco disco in Model.Discos)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Form", "Disco", new {IdDisco = disco.IdDisco})"></a><i class="bi bi-vector-pen">Actualizar disco.</i></td>
                            <td>@disco.IdDisco</td>
                            <td>@disco.Titulo</td>
                            <td>@disco.Artista</td>
                            <td>@disco.GeneroMusical</td>
                            <td>@disco.Duracion</td>
                            <td>@disco.Año</td>
                            <td>@disco.Distribuidora</td>
                            <td>@disco.Ventas</td>
                            <td>@disco.Disponibilidad</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "Disco", new { IdDisco = disco.IdDisco })" onclick="return confirm('Seguro que quieres borrar el disco?')"><i class="fa-solid fa-trash-can"></i></a></td>
                        </tr>

                    }

                </tbody>
            </table>

        </div>
    </div>

}

<script type="text/javascript">
    let table = new DataTable('#myTable', {
        responsive: true,
        "lengthMenu": [[5, 10, 15, 20, -1], [5, 10, 15, 20, "Todos"]],
        searching: false,
        language: {
            url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json",
        },
    });
</script>
